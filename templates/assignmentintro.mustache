{{!
    @template local_solsits/assignmentintro

    Personalised data about this assignment for this student.

    Example context (json):
    {
        "link": "https://my.moodle.ac.uk/mod/assign/view.php?id=12345",
        "style": "teal",
        "status": "Draft",
        "submissiondue": "Submission due: 2021-09-30 23:59",
        "submissiondate": "Submission date: 2021-09-30 23:59",
        "reattempt": "Note: Only do this if told to do so",
        "assessmentbrief": "Assessment brief: <a href='https://my.moodle.ac.uk/somelink/view.php?id=12345'>AE1 assessment brief</a>"
    }
}}
<div class="highlight-box highlight-box-{{style}} fa-style">
    {{#link}}
        <p>{{{link}}}</p>
    {{/link}}
    <p><strong>{{#str}} submissionstatus , mod_assign {{/str}}:</strong> {{status}}</p>
    
    {{#submissiondue}}
    <p>{{{submissiondue}}}</p>
    {{/submissiondue}}

    {{#submissiondate}}
    <p>{{{submissiondate}}}</p>
    {{/submissiondate}}

    {{#reattempt}}
    <p>{{{.}}}</p>
    {{/reattempt}}

    {{#assessmentbrief}}
    <p>{{{assessmentbrief}}}</p>
    {{/assessmentbrief}}
</div>